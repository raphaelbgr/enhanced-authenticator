{
  "compilerOptions": {
    "strict": true,
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "out/cli",
    "rootDir": "cli",
    "lib": ["ES2022"],
    "types": ["node"]
  },
  "include": ["cli/**/*"]
}
